<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_controller_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="24dp"
        android:text="address - channel - invert"/>

    <ImageButton
        android:id="@+id/button_edit_controller_action"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_mode_edit_black_36dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <ImageButton
        android:id="@+id/button_remove_controller_action"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_remove_circle_black_36dp"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</LinearLayout>